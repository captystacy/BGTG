<Window x:Class="POSUI.CalendarPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSUI"
        mc:Ignorable="d"
        Title="Календарный план" Height="450" Width="800">
    <Grid local:GridHelpers.RowCount="6"
          local:GridHelpers.StarRows="5"
          local:GridHelpers.ColumnCount="6"
          local:GridHelpers.StarColumns="1,3">
        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0" 
            Width="100" 
            TextWrapping="Wrap" 
            TextAlignment="Center" 
            Text="Наименование отдельных зданий, сооружений и видов работ"></TextBlock>
        <TextBlock 
            Grid.Row="0" 
            Grid.Column="1" 
            Grid.ColumnSpan="3" 
            Width="Auto" 
            TextWrapping="Wrap" 
            TextAlignment="Center" 
            VerticalAlignment="Center"
            Text="Наименование отдельных зданий, сооружений и видов работ"></TextBlock>
    </Grid>
</Window>
